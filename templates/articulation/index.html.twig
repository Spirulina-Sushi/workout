{% extends 'base.html.twig' %}

{% block title %}Articulation index{% endblock %}

{% block body %}
    <h1>Articulation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for articulation in articulations %}
            <tr>
                <td>{{ articulation.id }}</td>
                <td>{{ articulation.name }}</td>
                <td>
                    <a href="{{ path('articulation_show', {'id': articulation.id}) }}">show</a>
                    <a href="{{ path('articulation_edit', {'id': articulation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('articulation_new') }}">Create new</a>
{% endblock %}
