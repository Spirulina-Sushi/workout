                                                                    <div class="row">
                                                                        <div class="col-2"></div>
                                                                        <div class="col-6">
                                                                            <label class="form-check-label" for="exampleCheck1">{{ exercise.name }}</label>
                                                                        </div>
                                                                        <div class="col-4">
                                                                            <input type="checkbox" class="form-check-input" id="exampleCheck{}">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                    </div>

                                {% endfor %}
                            </div>
                        {% endfor %}



