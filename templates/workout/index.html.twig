{% extends 'base.html.twig' %}

{% block title %}Workout index{% endblock %}

{% block body %}
    <h1>Workout index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Length</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for workout in workouts %}
            <tr>
                <td>{{ workout.id }}</td>
                <td>{{ workout.name }}</td>
                <td>{{ workout.length }}</td>
                <td>{{ workout.date ? workout.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('workout_show', {'id': workout.id}) }}">show</a>
                    <a href="{{ path('workout_edit', {'id': workout.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('workout_new') }}">Create new</a>
{% endblock %}
